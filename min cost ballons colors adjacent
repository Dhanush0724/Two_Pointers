class Solution:
    def minCost(self, colors: str, neededTime: List[int]) -> int:
        
       
    
        i = 0
        n = len(colors)
        time = 0
        for j in range(1,n):
            if colors[i] == colors[j]:
                time += min(neededTime[i],neededTime[j])
                if neededTime[i] < neededTime[j]:
                    i = j
            else :
                i=j
                
        return time
                
            
        
        
        
        
